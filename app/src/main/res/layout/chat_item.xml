<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_me_chating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/id_me_chating_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/me_bubble"
            android:gravity="center"
            android:maxWidth="300dp"
            android:paddingBottom="2dp"
            android:paddingRight="20dp"
            android:paddingTop="0dp"
            android:text="你好" />

        <ImageView
            android:id="@+id/id_me_chating_head"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/head" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_other_chating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/id_other_chating_head"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/head1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_other_chating_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baby" />

            <TextView
                android:id="@+id/id_other_chating_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/other_bubble"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingTop="0dp"
                android:text="你睡醒了吗" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
